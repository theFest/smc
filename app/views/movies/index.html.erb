<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Lenght</th>
      <th>Rating</th>
      <th>Description</th>
      <th>Watched</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <% if movie.user == current_user %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.director %></td>
        <td><%= movie.lenght %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.description %></td>
        <td><%= movie.watched %></td>
        <td><% movie.user_id %></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Show', movie %></button></td>
        <td><button type="button" class="btn btn-primary"><%= link_to 'Edit', edit_movie_path(movie) %></button></td>
        <td><button type="button" class="btn btn-dark"><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-success"><%= link_to 'Enter new movie to collection', new_movie_path %></button>
