<h1>Watchlists</h1>

<table class="table table-active">
  <thead>
    <tr>
      <th>Movie</th>
      <th>Added</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @watchlists.each do |watchlist| %>
      <tr>
        <td><%= watchlist.movie %></td>
        <td><%= watchlist.added %></td>
        <td><%= link_to 'Show', watchlist, type:"button", class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_watchlist_path(watchlist), type:"button", class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', watchlist, method: :delete, data: { confirm: 'Are you sure?' }, type:"button", class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</table>
<br>

<%= link_to 'Enter new movie to watchlist', new_watchlist_path, type:"button", 
class:"btn btn-outline-success" %>